<Window x:Class="ProyectoLote.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoLote.View"
        xmlns:customcontrol="clr-namespace:ProyectoLote.CustomControl"
        mc:Ignorable="d"
        Title="LoginView" Height="800" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="White">

	<Grid>
		<!-- Definición de las filas -->
		<Grid.RowDefinitions>
			<RowDefinition Height="150"/>
			<!-- Fila para la imagen -->
			<RowDefinition Height="Auto"/>
			<!-- Fila para el título -->
			<RowDefinition Height="*"/>
			<!-- Fila para el formulario -->
		</Grid.RowDefinitions>

		<!-- Contenedor para los botones de minimizar, maximizar y cerrar -->
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
			<!-- Botón Minimizar -->
			<Button x:Name="btnMinimizar"
                    BorderThickness="0"
                    Content="-"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Width="30" Height="30"
                    Click="btnMinimizar_Click">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Background" Value="#28AEED"/>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#278BEF"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border Width="18" Height="18" CornerRadius="9"
                                Background="{TemplateBinding Background}">
							<ContentPresenter VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Button.Template>
			</Button>

			<!-- Botón Maximizar -->
			<Button x:Name="btnMaximizar"
                    BorderThickness="0"
                    Content="☐"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Width="30" Height="30"
                    Click="btnMaximizar_Click">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Background" Value="#28AEED"/>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#278BEF"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>

			<!-- Botón Cerrar -->
			<Button x:Name="btnCerrar"
                    BorderThickness="0"
                    Content="X"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Width="30" Height="30"
                    Click="btnCerrar_Click">
				<Button.Style>
					<Style TargetType="Button">
						<Setter Property="Background" Value="#E74C3C"/>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#C0392B"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>
		</StackPanel>

		<!-- Imagen de fondo -->
		<Border Grid.Row="0">
			<Image Source="/Imagenes/carrosLargos.png" Stretch="Fill"/>
		</Border>

		<!-- Título -->
		<Border Grid.Row="1" Background="#CDE7F7" Height="40">
			<TextBlock Text="INICIAR SESIÓN"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Black"
                       FontFamily="Montserrat"/>
		</Border>

		<!-- Formulario -->
		<Border Grid.Row="2"
                Margin="20,20,20,20"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="LightGray"
                Background="#F5F5F5"
                Padding="20">
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

				<!-- Icono de Google -->
				<Image Source="/Imagenes/google.png" Width="40" Height="40" HorizontalAlignment="Center" Margin="0,10"/>

				<!-- Texto de iniciar sesión con Google -->
				<TextBlock Text="Iniciar sesión con google"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,10"/>

				<!-- Nombre -->
				<TextBlock Text="Nombre"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,20,0,5"/>
				<TextBox Height="30" BorderBrush="Black" BorderThickness="1" Margin="0,5"/>

				<!-- Correo electrónico -->
				<TextBlock Text="Correo electrónico"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,15,0,5"/>
				<TextBox Height="30" BorderBrush="Black" BorderThickness="1" Margin="0,5"/>

				<!-- Contraseña -->
				<TextBlock Text="Contraseña"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,15,0,5"/>
				<PasswordBox Height="30" BorderBrush="Black" BorderThickness="1" Margin="0,5"/>

				<!-- Botón de Iniciar sesión -->
				<Button Content="Iniciar sesión"
                        Margin="0,20,0,0"
                        Height="35"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White"
                        FontWeight="Bold"
                        Cursor="Hand"/>
			</StackPanel>
		</Border>
	</Grid>
</Window>

<Window x:Class="ProyectoLote.View.InventarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoLote.View"
        mc:Ignorable="d"
        Title="InventarioView" Height="450" Width="800">
    <Border CornerRadius="15" BorderBrush="#222" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="red" Offset="0"/>
                <GradientStop Color="#191919" Offset="0.75"/>
                <GradientStop Color="#FF3936" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- Imagen superior -->
            <Image Source="D:\ProyectoLoteFer\ProyectoLote\ProyectoLote\Images\imagen2.png" Height="130" Stretch="Fill" VerticalAlignment="Top"/>

            <!-- TITULO -->
            <Border Background="#333" Height="35" VerticalAlignment="Top" Margin="0,130,0,0">
                <TextBlock Text="VENTA DE AUTOMÓVILES"
                Foreground="White"
                FontSize="20"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
            </Border>

            <!-- ListView centrado -->
            <ListView x:Name="Inventario"
                      Margin="50,170,50,74"
                      ItemsSource="{Binding ListaCarros}"
                      Background="#2b2b2b"
                      Foreground="White"
                      BorderThickness="0"
                      FontSize="14"
                      FontWeight="SemiBold">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Modelo" DisplayMemberBinding="{Binding Modelo}" Width="232"/>
                        <GridViewColumn Header="Precio" DisplayMemberBinding="{Binding Precio}" Width="232"/>
                        <GridViewColumn Header="Existencias" DisplayMemberBinding="{Binding Existencias}" Width="232"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Botón Regresar -->
            <Button x:Name="btnRegresar"
                    Content="Regresar"
                    Click="btnRegresar_Click"
                    Height="33"
                    Width="160"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,375,0,0"
                    Background="#444"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Padding="10,5"/>

            <!-- Minimizar y Cerrar -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,10,0">
                <Button x:Name="btnMinimizar"
                        Content="–"
                        Width="30" Height="30"
                        Click="btnMinimizar_Click"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"/>
                <Button x:Name="btnSalir"
                        Content="x"
                        Width="30" Height="30"
                        Click="btnSalir_Click"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

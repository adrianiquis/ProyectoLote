<Window x:Class="ProyectoLote.View.AgregaAuto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoLote.View"
        mc:Ignorable="d"
        Title="Agregando Auto"
        Height="540"
        Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="15">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#191919" Offset="0.0"/>
                <GradientStop Color="#BA181B" Offset="0.75"/>
                <GradientStop Color="#BA181B" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="128"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="18"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="18"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="139"/>
                <ColumnDefinition Width="85"/>
                <ColumnDefinition Width="108"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="193"/>
                <ColumnDefinition Width="29"/>
                <ColumnDefinition Width="167"/>
                <ColumnDefinition Width="103"/>
                <ColumnDefinition Width="51"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <!-- Imagen de encabezado -->
            <Image Source="D:\Nani's documents\Documents\Uni\proyectoVaneEquipo\ProyectoLote\ProyectoLoteFer\ProyectoLote\ProyectoLote\Images\imagen2.png" 
                   Height="121" Stretch="Fill" VerticalAlignment="Top"
                   Grid.ColumnSpan="11"
                   Grid.Row="0" Grid.RowSpan="3" RenderTransformOrigin="0.5,0.5" Margin="0,0,-9,0">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="1.302"/>
                        <RotateTransform/>
                        <TranslateTransform X="1.477"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <!-- Menú de navegación -->
            <Border Grid.Row="2"
          Grid.ColumnSpan="11"
          Background="#333"
          Height="30"
          VerticalAlignment="Center"
          CornerRadius="5"
          Margin="-2,0,-13,0">
                <TextBlock Text="VENTA DE AUTOMÓVILES"
                 Foreground="White"
                 FontSize="20"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
            </Border>


            <!-- Cabecera texto -->
            <Border Background="#333" Height="32"
                    VerticalAlignment="Top"
                    Margin="0,130,0,0"
                    Grid.ColumnSpan="11"
                    Grid.Row="2">
            </Border>


            <!-- Título del formulario -->
            <ContentControl x:Name="titulo"
                            Style="{StaticResource estiloTitulos}"
                            FontSize="18"
                            Content="Agregar Auto"
                            Grid.Column="4"
                            Grid.ColumnSpan="5"
                            Grid.Row="2"
                            Margin="30,94,1,56" Grid.RowSpan="3"/>

            <!-- Etiquetas -->
            <ContentControl Style="{StaticResource estiloEtiquetas}"
                            FontSize="18"
                            Content="Marca:"
                            Grid.Row="4" Grid.Column="2" Margin="0,0,2,36"/>
            <ContentControl Style="{StaticResource estiloEtiquetas}"
                            Content="Modelo:"
                            FontSize="18"
                            Grid.Row="5" Grid.Column="1"
                            Grid.ColumnSpan="4" Margin="84,15,124,3" Grid.RowSpan="2"/>
            <ContentControl Style="{StaticResource estiloEtiquetas}"
                            Content="Año:"
                            FontSize="18"
                            Grid.Row="7" Grid.Column="2"
                            Grid.ColumnSpan="3" Margin="5,3,118,15" Grid.RowSpan="2"/>

            <!-- TextBoxes -->
            <TextBox x:Name="txtMarca"
                     Style="{StaticResource estiloBaseTextBox}"
               
                     Grid.Row="4" Grid.Column="4" Margin="0,0,12,51"/>
            <TextBox x:Name="txtModelo"
                     Style="{StaticResource estiloBaseTextBox}"
                     
                     Grid.Row="6" Grid.Column="4" Margin="0,0,9,51"/>
            <TextBox x:Name="txtAño"
                     Style="{StaticResource estiloBaseTextBox}"
                     
                     Grid.Row="8" Grid.Column="4" Margin="0,0,9,48"/>

            <!-- Botones funcionales -->
            <Button x:Name="btnAgregar"
                    Content="Agregar"
                    FontSize="16"
                    Background="#4CAF50"
                    Style="{StaticResource estiloButtonBase}"
                    Grid.Column="5" Grid.ColumnSpan="3"
                    Grid.Row="8"
                    Click="btnAgregar_Click" Margin="2,64,27,8" Grid.RowSpan="2"/>
            <Button x:Name="btnCancelar"
                    Content="Cancelar"
                    FontSize="16"
                    Background="Red"
                    Style="{StaticResource estiloButtonBase}"
                    Grid.Column="1" Grid.ColumnSpan="4"
                    Grid.Row="8"
                    Click="btnCancelar_Click" Margin="58,63,100,9" Grid.RowSpan="2"/>

            <!-- Botones ventana -->
            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="9"
                    Click="btnMinimizar_Click"/>
            <Button x:Name="btnCerrar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="10"
                    Click="btnCerrar_Click"/>
        </Grid>
    </Border>
</Window>
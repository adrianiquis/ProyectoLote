<Window x:Class="ProyectoLote.View.PantallaInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoLote.View"
        mc:Ignorable="d"
        Title="PantallaInicio" Height="450" Width="800">
    <Border CornerRadius="15" BorderBrush="#222" BorderThickness="1">

        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="red" Offset="0"/>
                    <GradientStop Color="#191919" Offset="0.75"/>
                    <GradientStop Color="#FF3936" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <!-- Imagen superior -->
            <Image Source="D:\Nani's documents\Documents\Uni\proyectoVaneEquipo\ProyectoLote\ProyectoLoteFer\ProyectoLote\ProyectoLote\Images\imagen2.png" Height="130" Stretch="Fill" VerticalAlignment="Top"/>

            <!-- TITULO -->
            <Border Background="#333" Height="35" VerticalAlignment="Top" Margin="0,130,0,0">
                <TextBlock Text="VENTA DE AUTOMÓVILES"
                Foreground="White"
                FontSize="20"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
            </Border>

            <!-- Botones centrados -->
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="220"
                        Margin="0,100,0,0">

                <Button Content="Iniciar Sesión"
                        Click="btnInicioSesion_Click"
                        Height="40"
                        Margin="0,0,0,20"
                        Background="#444"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Padding="10,5"/>

                <Button Content="Registrarse"
                        Click="btnRegistro_Click"
                        Height="40"
                        Margin="0,0,0,20"
                        Background="#444"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Padding="10,5"/>
                <Button Content="Salir"
                        Click="btnSalir_Click"
                        Height="40"
                        Background="#aa3333"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Padding="10,5"/>
            </StackPanel>

            <!-- Minimizar y Cerrar -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,10,0">
                <Button Content="–"
                        Width="30" Height="30"
                        Click="btnMinimizar_Click"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"/>
                <Button Content="x"
                        Width="30" Height="30"
                        Click="btnCerrar_Click"
                        Background="Transparent"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
<Window x:Class="ProyectoLote.View.Venta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú de ventas"
        Height="540"
        Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Grid>
        <!-- Fondo con degradado -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#191919" Offset="0"/>
                <GradientStop Color="#BA181B" Offset="0.75"/>
                <GradientStop Color="#BA181B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Imagen superior -->
        <Image Source="/Images/imagen2.png"
               Height="130"
               Stretch="Fill"
               VerticalAlignment="Top"/>

        <!-- Título centrado -->
        <Border Background="#333"
                Height="40"
                VerticalAlignment="Top"
                Margin="0,130,0,0">
            <TextBlock Text="VENTA DE AUTOMÓVILES"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Botones principales -->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,190,0,0">
            <Button x:Name="btnRealizarVenta"
                    Content="Realizar Venta"
                    Width="200"
                    Margin="10"
                    Padding="10,5"
                    Background="#444"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderThickness="0"
                    Click="btnRealizarVenta_Click"/>

            <Button x:Name="btnVerVentas"
                    Content="Ventas realizadas"
                    Width="200"
                    Margin="10"
                    Padding="10,5"
                    Background="#444"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderThickness="0"
                    Click="btnVerVentas_Click"/>

            <Button x:Name="btnRegresar"
                    Content="Regresar"
                    Width="200"
                    Margin="10"
                    Padding="10,5"
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"
                    BorderThickness="0"
                    Click="btnRegresar_Click"/>
        </StackPanel>

        <!-- Botones de minimizar y cerrar -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0">
            <Button x:Name="btnMinimizar"
                    Content="−"
                    Width="30" Height="30"
                    Background="#444"
                    Foreground="White"
                    FontSize="16"
                    BorderThickness="0"
                    Click="btnMinimizar_Click"/>
            <Button x:Name="btnSalir"
                    Content="×"
                    Width="30" Height="30"
                    Background="#BA181B"
                    Foreground="White"
                    FontSize="16"
                    BorderThickness="0"
                    Click="btnSalir_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="ProyectoLote.View.Venta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Menú de ventas" Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="15">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#191919" Offset="0.0"/>
                <GradientStop Color="#BA181B" Offset="0.75"/>
                <GradientStop Color="#BA181B" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="130"/>
                <!-- Imagen superior -->
                <RowDefinition Height="40"/>
                <!-- Panel de navegación -->
                <RowDefinition Height="128"/>
                <!-- Título -->
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
                <!-- Botones fila 1 -->
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
                <!-- Botones fila 2 -->
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
                <!-- Botones fila 3 -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="197"/>
                <ColumnDefinition Width="27"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="122"/>
                <ColumnDefinition Width="26"/>
                <ColumnDefinition Width="122"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="127"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <!-- Imagen superior -->
            <Image Grid.Row="0"
                   Grid.ColumnSpan="11"
                   Source="/Images/imagen2.png"
                   Height="130"
                   Stretch="Fill"
                   VerticalAlignment="Top"/>

            <!-- Panel de navegación -->
            <Border Grid.Row="1"
                    Grid.ColumnSpan="11"
                    Background="#333"
                    Height="40"
                    VerticalAlignment="Center"
                    CornerRadius="5"
                    Margin="10,0">
                <TextBlock Text="VENTA DE AUTOMÓVILES"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Título central -->
            <ContentControl x:Name="Titulo"
                            Content="Ventas&#xD;&#xA;"
                            Style="{StaticResource estiloTitulos}"
                            Grid.Column="3"
                            FontSize="20"
                            Grid.ColumnSpan="8"
                            Grid.Row="2" Margin="107,21,-13,2" Grid.RowSpan="2"/>

            <!-- Botón Minimizar -->
            <Button x:Name="btnMinimizar"
                    Content="-"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Grid.Column="9"
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Click="btnMinimizar_Click"/>

            <!-- Botón Cerrar -->
            <Button x:Name="btnSalir"
                    Content="x"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Grid.Column="10"
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Click="btnSalir_Click"/>

            <!-- Botón Realizar Venta -->
            <Button x:Name="btnRealizarVenta"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Realizar Venta"
                    FontSize="18"
                    Grid.Column="3"
                    Grid.ColumnSpan="4"
                    Grid.Row="2"
                    Click="btnRealizarVenta_Click" Margin="1,108,119,2" Grid.RowSpan="2"/>

            <!-- Botón Ver ventas -->
            <Button x:Name="btnVerVentas"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Ventas realizadas"
                    FontSize="18"
                    Grid.Column="2"
                    Grid.ColumnSpan="4"
                    Grid.Row="4"
                    Click="btnVerVentas_Click" Margin="118,28,3,11"/>

            <!-- Botón Regresar -->
            <Button x:Name="btnRegresar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Regresar"
                    FontSize="18"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Grid.Row="6"
                    Click="btnRegresar_Click" Margin="0,28,0,14"/>
        </Grid>
    </Border>
</Window>
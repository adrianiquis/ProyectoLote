<Window x:Class="ProyectoLote.View.InicioMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ProyectoLote.ViewModel"
        mc:Ignorable="d"
        Title="Menú"
        Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border CornerRadius="15">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#191919" Offset="0.0"/>
                <GradientStop Color="#BA181B" Offset="0.75"/>
                <GradientStop Color="#BA181B" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="130"/>
                <!-- Imagen -->
                <RowDefinition Height="40"/>
                <!-- Menú de navegación -->
                <RowDefinition Height="75"/>
                <!-- Botones de navegación -->
                <RowDefinition Height="80"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="199"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="124"/>
                <ColumnDefinition Width="26"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="29"/>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <!-- Imagen de encabezado -->
            <Image Grid.Row="0"
                   Grid.ColumnSpan="11"
                   Source="/Images/imagen2.png"
                   Height="130"
                   Stretch="Fill"
                   VerticalAlignment="Top"/>

            <!-- Menú de navegación -->
            <Border Grid.Row="1"
                    Grid.ColumnSpan="11"
                    Background="#333"
                    Height="40"
                    VerticalAlignment="Center"
                    CornerRadius="5"
                    Margin="10,0">
                <TextBlock Text="VENTA DE AUTOMÓVILES"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Título -->
            <ContentControl x:Name="Titulo"
                            Style="{StaticResource estiloTitulos}"
                            Content="Menú Inicio"
                            Grid.Column="2"
                            Grid.ColumnSpan="5"
                            Grid.Row="2"
                            VerticalAlignment="Center"/>

            <!-- Botones -->
            <Button x:Name="btnInventario"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Inventario"
                    Grid.Column="1"
                    Grid.Row="3"
                    Grid.ColumnSpan="3"
                    Click="btnInventario_Click"/>

            <Button x:Name="btnMenuVentas"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Menú Ventas"
                    Grid.Column="5"
                    Grid.ColumnSpan="3"
                    Grid.Row="3"
                    Click="btnMenuVentas_Click"/>

            <Button x:Name="btnMenuInicio"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Regresar a Inicio"
                    Grid.Column="3"
                    Grid.Row="5"
                    Grid.ColumnSpan="3"
                    Click="btnMenuInicio_Click"/>

            <!-- Minimizar y cerrar -->
            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="9" Grid.Row="0"
                    VerticalAlignment="Top"
                    Click="btnMinimizar_Click"/>

            <Button x:Name="btnCerrar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="10" Grid.Row="0"
                    VerticalAlignment="Top"
                    Click="btnCerrar_Click"/>
        </Grid>
    </Border>
</Window>

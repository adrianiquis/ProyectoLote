<Window x:Class="ProyectoLote.View.BuscarAuto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoLote.View"
        mc:Ignorable="d"
        Title="BuscarAuto" Height="540" Width="960">

    <Border CornerRadius="15">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#191919" Offset="0.0"/>
                <GradientStop Color="#BA181B" Offset="0.75"/>
                <GradientStop Color="#BA181B" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>


        <Grid Margin="3,-9,-3,-78">
            <Grid.RowDefinitions>
                <RowDefinition Height="130"/>
                <!-- Imagen -->
                <RowDefinition Height="40"/>
                <!-- Panel de navegación -->
                <RowDefinition Height="128"/>
                <!-- Título -->
                <RowDefinition Height="75"/>
                <!-- Nombre + Combo -->
                <RowDefinition Height="80"/>
                <!-- Buscar -->
                <RowDefinition Height="75"/>
                <!-- Cancelar/Regresar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="153"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="21"/>
                <ColumnDefinition Width="122"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="113"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="66"/>
                <ColumnDefinition Width="29"/>
                <ColumnDefinition Width="154"/>
                <ColumnDefinition Width="116"/>
                <ColumnDefinition Width="38"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <!-- Imagen superior -->
            <Image Grid.Row="0"
                   Grid.ColumnSpan="14"
                   Source="/Images/imagen2.png"
                   Height="130"
                   Stretch="Fill"
                   VerticalAlignment="Top"/>

            <!-- Panel de navegación -->
            <Border Grid.Row="1"
                    Grid.ColumnSpan="14"
                    Background="#333"
                    Height="40"
                    VerticalAlignment="Center"
                    CornerRadius="5"
                    Margin="10,0">
                <TextBlock Text="VENTA DE AUTOMÓVILES"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Título -->
            <ContentControl x:Name="Titulo"
                            Style="{StaticResource estiloTitulos}"
                            Content="Buscar modelo"
                            FontSize="22"
                            Grid.Column="5"
                            Grid.ColumnSpan="9"
                            Grid.Row="2" Margin="74,27,4,48" Grid.RowSpan="2"/>

            <!-- Etiqueta -->
            <ContentControl x:Name="etNombre"
                            Style="{StaticResource estiloEtiquetas}"
                            Content="Nombre:"
                            FontSize="18"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Grid.Row="3"/>

            <!-- ComboBox -->
            <ComboBox x:Name="seleccionNombre"
                      Style="{StaticResource comboBoxEstiloBase}"
                      ItemsSource="{Binding ListaNombres}"
                      Grid.Column="3"
                      Grid.ColumnSpan="5"
                      Grid.Row="3" Margin="16,0,0,45"/>

            <!-- Botón Buscar -->
            <Button x:Name="btnBuscar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Buscar"
                    FontSize="16"
                    Background="#4CAF50"
                    Grid.Column="9"
                    Grid.ColumnSpan="4"
                    Grid.Row="2"
                    Click="btnBuscar_Click" Margin="3,119,27,42" Grid.RowSpan="2"/>

            <!-- Botón Cancelar -->
            <Button x:Name="btnCancelar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Cancelar búsqueda"
                    Background="red"
                    FontSize="16"
                    Grid.Column="1"
                    Grid.ColumnSpan="5"
                    Grid.Row="4"
                    Click="btnCancelar_Click" Margin="8,74,6,42" Grid.RowSpan="2"/>

            <!-- Botón Regresar -->
            <Button x:Name="btnRegresar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Regresar"
                    Background="Blue"
                    FontSize="16"
                    Grid.Column="6"
                    Grid.ColumnSpan="5"
                    Grid.Row="4"
                    Click="btnRegresar_Click" Margin="8,74,6,42" Grid.RowSpan="2"/>

            <!-- Minimizar -->
            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="12"
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Click="btnMinimizar_Click" Margin="0,0,5,0"/>

            <!-- Cerrar -->
            <Button x:Name="btnCerrar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="13"
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    Click="btnCerrar_Click"/>
        </Grid>
    </Border>
</Window>

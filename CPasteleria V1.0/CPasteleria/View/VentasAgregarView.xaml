<Window x:Class="CPasteleria.View.VentasAgregarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPasteleria.View"
        mc:Ignorable="d"
        Title="Agregando al carrito" Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/FondoSegundo.png"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="128"/>
                <RowDefinition Height="55"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="19"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="94"/>
                <ColumnDefinition Width="99"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="193"/>
                <ColumnDefinition Width="29"/>
                <ColumnDefinition Width="176"/>
                <ColumnDefinition Width="94"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <ContentControl x:Name="Titulo"
                            Style="{StaticResource estiloTitulos}"
                            Content="Agregar pastel a carrito"
                            Grid.Column="2"
                            Grid.ColumnSpan="5"
                            Grid.Row="2"/>

            <ContentControl x:Name="etNombre"
                            Style="{StaticResource estiloEtiquetas}"
                            Content="Nombre:"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="4"/>

            <ContentControl x:Name="etCantidad"
                            Style="{StaticResource estiloEtiquetas}"
                            Content="Cantidad:"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="6"/>

            <ComboBox x:Name="seleccionNombre"
                      Style="{StaticResource comboBoxEstiloBase}"
                      ItemsSource="{Binding ListaNombres}"
                      Grid.Column="4"
                      Grid.Row="4"/>

            <TextBox x:Name="txtBoxCantidad"
                     Style="{StaticResource estiloBaseTextBox}"
                     Grid.Column="4"
                     Grid.Row="6"/>

            <Button x:Name="btnAgregar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Agregar"
                    Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Grid.Row="4"
                    Click="btnAgregar_Click"/>

            <Button x:Name="btnCancelar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Cancelar"
                    Grid.Column="6"
                    Grid.ColumnSpan="2"
                    Grid.Row="6"
                    Click="btnCancelar_Click"/>

            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="9"
                    Click="btnMinimizar_Click"/>

            <Button x:Name="btnCerrar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="10"
                    Click="btnCerrar_Click"/>
        </Grid>
    </Border>
</Window>

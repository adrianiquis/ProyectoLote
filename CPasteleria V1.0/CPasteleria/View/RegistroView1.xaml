<Window x:Class="CPasteleria.View.RegistroView1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPasteleria.View"
        xmlns:customControls="clr-namespace:CPasteleria.CustomControls"
        mc:Ignorable="d"
        Title="Registrandose" Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/FondoSegundo.png"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="128"/>
                <RowDefinition Height="26"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="13"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="31"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="99"/>
                <ColumnDefinition Width="94"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="181"/>
                <ColumnDefinition Width="39"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="99"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <ContentControl x:Name="Titulo"
                            Style="{StaticResource estiloTitulos}"
                            Content="Registro (2/2)"
                            Grid.Column="2"
                            Grid.ColumnSpan="7"
                            Grid.Row="2"/>

            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="11"
                    Click="btnMinimizar_Click"/>
 
            <Button x:Name="btnCerrar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="12"
                    Click="btnCerrar_Click"/>

            <Button x:Name="btnRegistrarse"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Registrarse"
                    Grid.Column="7"
                    Grid.ColumnSpan="3"
                    Grid.Row="4"
                    Click="btnRegistrarse_Click"/>

            <Button x:Name="btnIniciarSesion"
                    Style="{StaticResource estiloButtonBase}"
                    Content="¿Ya tiene cuenta?"
                    Grid.Column="7"
                    Grid.ColumnSpan="3"
                    Grid.Row="6"
                    Click="btnIniciarSesion_Click"/>

            <Button x:Name="btnRegresar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Regresar"
                    Grid.Column="5"
                    Grid.ColumnSpan="3"
                    Grid.Row="8"
                    Click="btnRegresar_Click"/>

            <ContentControl x:Name="txtRfc"
                            Style="{StaticResource estiloEtiquetas}"
                            Content="RFC:"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="4"/>

            <ContentControl x:Name="txtContrasenia"
                            Style="{StaticResource estiloEtiquetas}"
                            Content="Contraseña:"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Grid.Row="6"/>

            <TextBox x:Name="txtBoxRfc"
                     Style="{StaticResource estiloBaseTextBox}"
                     Text="{Binding RFC, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Column="4"
                     Grid.ColumnSpan="2"
                     Grid.Row="4"/>

            <customControls:BindablePasswordBox x:Name="PasswordBoxContrasenia"
                                                Password="{Binding Password, Mode = TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                Grid.Column="4"
                                                Grid.ColumnSpan="2"
                                                Grid.Row="6"/>
        </Grid>
    </Border>
</Window>
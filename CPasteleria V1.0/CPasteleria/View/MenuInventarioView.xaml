<Window x:Class="CPasteleria.View.MenuInventarioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPasteleria.View"
        mc:Ignorable="d"
        Title="Menú inventario" Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/FondoSegundo.png"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="128"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="199"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="124"/>
                <ColumnDefinition Width="21"/>
                <ColumnDefinition Width="125"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <ContentControl 
                Style="{StaticResource estiloTitulos}" 
                Content="Menú inventario"
                Grid.Column="2"
                Grid.ColumnSpan="5"
                Grid.Row="2"/>
            
            <Button x:Name="btnAgregar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Agregar pastel"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Grid.Row="4"
                    Click="btnAgregar_Click"/>

            <Button x:Name="btnQuitar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Quitar pastel"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Grid.Row="6"
                    Click="btnQuitar_Click"/>

            <Button x:Name="btnBuscar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Buscar pastel"
                    Grid.Column="5"
                    Grid.ColumnSpan="3"
                    Grid.Row="4"
                    Click="btnBuscar_Click"/>

            <Button x:Name="btnEditar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Editar pastel"
                    Grid.Column="5"
                    Grid.ColumnSpan="3"
                    Grid.Row="6"
                    Click="btnEditar_Click"/>

            <Button x:Name="btnRegresar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Regresar"
                    Grid.Column="3"
                    Grid.Row="8"
                    Grid.ColumnSpan="3"
                    Click="btnRegresar_Click"/>

            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="9"
                    Click="btnMinimizar_Click"/>

            <Button x:Name="btnCerrar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="10"
                    Click="btnCerrar_Click"/>
        </Grid>
    </Border>
</Window>

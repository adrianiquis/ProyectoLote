<Window x:Class="CPasteleria.View.VerVentasIdView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPasteleria.View"
        mc:Ignorable="d"
        Title="Viendo ventas por Id" Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/FondoSegundo.png"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="128"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="153"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="21"/>
                <ColumnDefinition Width="122"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="113"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="66"/>
                <ColumnDefinition Width="29"/>
                <ColumnDefinition Width="154"/>
                <ColumnDefinition Width="116"/>
                <ColumnDefinition Width="38"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <ContentControl x:Name="Titulo"
                            Style="{StaticResource estiloTitulos}"
                            Content="Ver ventas por ID"
                            Grid.Column="3"
                            Grid.ColumnSpan="7"
                            Grid.Row="2"/>

            <ContentControl x:Name="etId"
                            Style="{StaticResource estiloEtiquetas}"
                            Content="Id de Venta:"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Grid.Row="4"/>

            <ComboBox x:Name="seleccionIdVenta"
                      Style="{StaticResource comboBoxEstiloBase}"
                      ItemsSource="{Binding ListaNombres}"
                      Grid.Column="5"
                      Grid.ColumnSpan="3"
                      Grid.Row="4"/>

            <Button x:Name="btnBuscar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Buscar"
                    Grid.Column="9"
                    Grid.ColumnSpan="2"
                    Grid.Row="4"
                    Click="btnBuscar_Click"/>

            <Button x:Name="btnCancelar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Cancelar búsqueda"
                    Grid.Column="2"
                    Grid.ColumnSpan="4"
                    Grid.Row="6"
                    Click="btnCancelar_Click"/>

            <Button x:Name="btnRegresar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Regresar"
                    Grid.Column="7"
                    Grid.ColumnSpan="4"
                    Grid.Row="6"
                    Click="btnRegresar_Click"/>

            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="12"
                    Click="btnMinimizar_Click"/>

            <Button x:Name="btnCerrar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="13"
                    Click="btnCerrar_Click"/>
        </Grid>
    </Border>
</Window>

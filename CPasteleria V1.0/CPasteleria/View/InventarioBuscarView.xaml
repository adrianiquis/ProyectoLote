<Window x:Class="CPasteleria.View.InventarioBuscarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPasteleria.View"
        mc:Ignorable="d"
        Title="Buscar pastel por..." Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/Fondotercero.png"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="24"/>
                <RowDefinition Height="128"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="224"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="121"/>
                <ColumnDefinition Width="154"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            
            <ContentControl x:Name="Titulo"
                            Style="{StaticResource estiloTitulos}"
                            Content="Buscar pastel"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Grid.Row="2"/>

            <Button x:Name="btnNombre"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Por nombre"
                    Grid.Column="2"
                    Grid.Row="4"
                    Click="btnNombre_Click"/>

            <Button x:Name="btnTodos"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Mostrar todos"
                    Grid.Column="2"
                    Grid.Row="6"
                    Click="btnTodos_Click"/>

            <Button x:Name="btnCancelar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Cancelar"
                    Grid.Column="2"
                    Grid.Row="8"
                    Click="btnCancelar_Click"/>

            <Button x:Name="btnMinimizar"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="-"
                    Grid.Column="5"
                    Click="btnMinimizar_Click"/>

            <Button x:Name="btnSalir"
                    Style="{StaticResource estiloBaseMinSalir}"
                    Content="x"
                    Grid.Column="6"
                    Click="btnSalir_Click"/>
        </Grid>
    </Border>
</Window>

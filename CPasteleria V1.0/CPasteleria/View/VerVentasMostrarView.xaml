<Window x:Class="CPasteleria.View.VerVentasMostrarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPasteleria.View"
        mc:Ignorable="d"
        Title="Mostrando ventas" Height="540" Width="960"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/FondoSegundo.png"/>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button x:Name="btnMinimizar"
                        Style="{StaticResource estiloBaseMinSalir}"
                        Content="-"
                        Click="btnMinimizar_Click" Margin="0,5,5,0"/>
                <Button x:Name="btnCerrar"
                        Style="{StaticResource estiloBaseMinSalir}"
                        Content="x"
                        Click="btnCerrar_Click" Margin="0,5,0,0"/>
            </StackPanel>

            <ContentControl x:Name="Titulo"
                            Style="{StaticResource estiloTitulos}"
                            Content="Ventas Registradas"
                            Grid.Column="1" Grid.Row="1"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,20"/>

            <ListView x:Name="verVentas"
                      Style="{StaticResource listViewEstiloBase}"
                      Grid.Column="1" Grid.Row="2" 
                      Margin="194,0,194,10">
                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource encabezadoListViewEstilo}">
                        <GridViewColumn Header="ID Venta" DisplayMemberBinding="{Binding IDVenta}" Width="100"/>
                        <GridViewColumn Header="Empleado" DisplayMemberBinding="{Binding NombreEmpleado}" Width="200"/>
                        <GridViewColumn Header="Fecha" DisplayMemberBinding="{Binding Fecha, StringFormat='dd/MM/yyyy'}" Width="120"/>
                        <GridViewColumn Header="Total" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Total, StringFormat=C}" HorizontalAlignment="Right"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button x:Name="btnRegresar"
                    Style="{StaticResource estiloButtonBase}"
                    Content="Regresar"
                    Grid.Column="1" Grid.Row="3"
                    Width="200" Height="79" 
                    Click="btnRegresar_Click"/>
        </Grid>
    </Border>
</Window>